<body>
<h3>Books</h3>
  <table>
    <thead>
  	  <tr>
  	    <th>Title</th>
  	    <th>Body</th>
  	    <th colspan="3"></th>
  	  </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
      	<td><%= book.title %></td>
      	<td><%= book.body %></td>
      	<td><%= link_to "Show", book_path(book) %></td>
      	<td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <h3>New book</h3>
  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'CreateBook' %></br>
  <% end %>
</body>